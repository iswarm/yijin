.logo{
    height: 200rpx;
	width: 200rpx;
	padding-top: 50rpx;
	padding-left: 35%;
}
.login{
	width:100%;
	height:100%;
	background-size: contain;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;/**flex布局*/
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;/**flex布局方向*/
	margin-top: 80rpx;
}
.login-xy{
	width:60%;
	background: cornflowerblue;
	margin-left: 15%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;/**flex布局控件位置居中*/
	margin-bottom: 20rpx;
	margin-top: 20rpx;
	border: 0px;
	border-radius: 22px;
	outline: 0;
	padding: 8px 15px;
}
.login-txt{
	color: #333333;
	font-size: 35rpx;
	border-left:2px solid #BDBDBD;
}
.forgot-psd{
	color: black;
	text-align: left; 
	margin-bottom: 30rpx;
	margin-left: 25%;
	margin-top: 30rpx;
}
.forgot-psd-spacing{
	font-weight: bold;
	margin-left: 10%;
	margin-right: 10%;
}
.button{
	width: 70%;
	border-radius: 45rpx;
	background: cornflowerblue;
	border: 0px;
	color: white;
	letter-spacing:8px;
	margin-top: 20rpx;
}
.bottom{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	position: absolute;
	bottom: 50rpx;
	margin-left: 25%;
	text-align: center;
}
.login-icon{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;/**flex布局控件位置居中*/
	letter-spacing:40px;
	margin-left: 10%;
}

